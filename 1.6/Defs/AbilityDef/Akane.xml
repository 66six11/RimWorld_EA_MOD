  <comps>
 <li Class="CompProperties_AbilityLaunchProjectile">
  <projectileDef>Akane_Bullt_EXX</projectileDef>


  </li>
  </comps>
    </AbilityDef>
    <ThingDef ParentName="BaseBullet">
  <defName>Akane_Bullt_EXX</defName>
  <label>朱音子弹</label>
  <graphicData>
    <drawSize>7</drawSize>
    <texPath>Projectile/Bullet_Akane</texPath>
    <graphicClass>Graphic_Single</graphicClass>
  </graphicData>
  <comps>
  <li Class="CompProperties_AbilityGiveHediff"><!-- 给目标添加一个 Hediff（状态效果） -->
  <compClass>CompAbilityEffect_GiveHediff</compClass><!-- 实际执行效果的组件类 -->
  <hediffDef>BAWN_Akane_HediffDef</hediffDef><!-- 要添加的状态效果定义名 -->
  <onlyApplyToSelf>false</onlyApplyToSelf> <!-- 仅对自己生效 -->
  <replaceExisting>false</replaceExisting><!-- 如果已有同类效果，则替换它 -->
  </li>
  </comps>
  <additionalHediffs>
      <li>
        <hediff>BAWN_Akane_HediffDef</hediff>
        <severityPerDamageDealt>0.005</severityPerDamageDealt>
      </li>
    </additionalHediffs>
  <projectile>
    <damageDef>RangedStab</damageDef>
    <damageAmountBase>50</damageAmountBase>
    <armorPenetrationBase>1</armorPenetrationBase>
    <stoppingPower>2</stoppingPower>
    <speed>100</speed>
  </projectile>
</ThingDef>

<HediffDef>
        <!-- 状态的唯一标识符 -->
        <defName>BAWN_Akane_HediffDef</defName>
        <!-- 显示名称 -->
        <label>破甲</label>
        <!-- 效果描述 -->
        <description>减少30%护甲，效果持续30秒。</description>
        <defaultLabelColor>(255, 0, 0)</defaultLabelColor>
        <!-- 是否为负面效果（会影响心情等） -->
        <isBad>true</isBad>
        <hediffClass>HediffWithComps</hediffClass>
        <everCurableByItem>false</everCurableByItem>
        <!-- 属性限制调整，这里是 LifeStage 属性不受影响 -->
          <stages>
          <li>     
           <statOffsets>
        <ArmorRating_Sharp>-0.3</ArmorRating_Sharp>
		    <ArmorRating_Blunt>-0.3</ArmorRating_Blunt>
	      <ArmorRating_Heat>-0.3</ArmorRating_Heat>
            </statOffsets>
           </li>
          </stages>
        <comps>
        <li Class="HediffCompProperties_Disappears">
        <showRemainingTime>true</showRemainingTime>
        <disappearsAfterTicks>1200</disappearsAfterTicks>
      </li>
      
    </comps>
    </HediffDef>
</Defs>