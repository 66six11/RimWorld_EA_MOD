    <ThingDef ParentName="BaseBullet">
  <defName>Akane_Bullt_EXX</defName>
  <label>朱音子弹</label>
  <graphicData>
    <drawSize>7</drawSize>
    <texPath>Projectile/Bullet_Akane</texPath>
