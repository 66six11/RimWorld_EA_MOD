<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!--光-->
  <ThingDef ParentName="BANC_BaseHumanMakeableGun">
    <defName>BANC_Hikali</defName>
    <label>车票拳铳</label>
    <description>光爱用的手枪。对暴走的「麻烦」乘客效果拔群。虽说不常用，但保养倒是很勤快。</description>
    <graphicData>
      <texPath>Weapon/Highland/Hikali</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.6</drawSize>
    </graphicData>
    <weaponTags>
      <li>BANC_Hikali</li>
    </weaponTags>
    <equippedAngleOffset>45</equippedAngleOffset>
    <soundInteract>Interact_Revolver</soundInteract>
    <statBases>
      <WorkToMake>80000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.41</AccuracyTouch>
      <AccuracyShort>0.68</AccuracyShort>
      <AccuracyMedium>0.96</AccuracyMedium>
      <AccuracyLong>0.99</AccuracyLong>
      <RangedWeapon_Cooldown>3</RangedWeapon_Cooldown>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>+0.25</SocialImpact>
    </equippedStatOffsets>
    <costList>
      <Steel>800</Steel>
      <ComponentIndustrial>10</ComponentIndustrial>
      <Cloth>40</Cloth>
    </costList>
    <recipeMaker>
      <!--<researchPrerequisite>BA_Weapon_SRT</researchPrerequisite>-->
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
      <displayPriority>440</displayPriority>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>BANC_Bullet_Hikali</defaultProjectile>
        <warmupTime>1.8</warmupTime>
        <range>49</range>
        <soundCast>Shot_Autopistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>BANC_Bullet_Hikali</defName>
    <label>车票拳铳子弹</label>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>29</damageAmountBase>
      <stoppingPower>2</stoppingPower>
      <armorPenetrationBase>0.3</armorPenetrationBase>
      <speed>130</speed>
    </projectile>
    <graphicData>
      <drawSize>2</drawSize>
      <texPath>Projectile/Bullet_Hikali</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>

